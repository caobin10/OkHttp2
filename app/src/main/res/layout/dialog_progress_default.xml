<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_round"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="2.0">
        <FrameLayout
            android:id="@+id/fl_success"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/pw_progressWheel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                wheel:matProg_barColor="@color/green"
                wheel:matProg_progressIndeterminate="true"
                android:layout_gravity="center" />
            <cn.pedant.SweetAlert.SuccessTickView
                android:id="@+id/stv_success"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:textSize="@dimen/common_text_size"
        android:textColor="@color/body_text_color_common"
        android:text="操作执行中"/>
</LinearLayout>